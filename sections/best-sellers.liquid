{{ 'section-best-sellers.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<!-- Tailwind CSS CDN -->
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = {
    prefix: 'tw-',
    corePlugins: {
      preflight: false,
    }
  }
</script>

<section class="best-sellers-section section-{{ section.id }}-padding" data-section-id="{{ section.id }}">
  <div class="seller-header-container tw-mx-auto tw-px-4 sm:tw-px-6 lg:tw-px-8">
    <header class="section-header">
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
      {%- if section.settings.view_all_link != blank -%}
        <a href="{{ section.settings.view_all_link }}" class="view-all-link" aria-label="{{ section.settings.view_all_text }}">
          {{ section.settings.view_all_text }}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      {%- endif -%}
    </header>

    <!-- Desktop: Horizontal Scrollable Grid with Custom Scrollbar -->
    <div class="tw-hidden md:tw-block">
      <div class="best-sellers-scroll-container tw-overflow-x-auto tw-pb-4" id="desktop-scroll-{{ section.id }}">
        <ul class="product-list tw-flex tw-gap-6 tw-min-w-max tw-m-0 tw-p-0" role="list" aria-label="Best Sellers Products">
          {%- for block in section.blocks -%}
            <li class="product-item tw-w-[220px] tw-flex-shrink-0" {{ block.shopify_attributes }}>
              {% render 'best-seller-card', block: block, index: forloop.index %}
            </li>
          {%- endfor -%}
        </ul>
      </div>
      <!-- Custom Scrollbar -->
      <div style="margin-top: 32px;">
        <div id="scrollbar-track-{{ section.id }}">
          <div id="scrollbar-thumb-{{ section.id }}"></div>
        </div>
      </div>
    </div>

    <!-- Mobile: Grid with Show More -->
    <div class="md:tw-hidden">
      <ul class="product-list tw-grid tw-grid-cols-2 tw-gap-4 tw-m-0 tw-p-0" role="list" aria-label="Best Sellers Products">
        {%- for block in section.blocks -%}
          <li 
            class="product-item {% if forloop.index > 4 %}best-seller-hidden tw-hidden{% endif %}" 
            data-product-index="{{ forloop.index }}"
            {{ block.shopify_attributes }}
          >
            {% render 'best-seller-card', block: block, index: forloop.index %}
          </li>
        {%- endfor -%}
      </ul>

      {%- if section.blocks.size > 4 -%}
        <div class="tw-mt-8 tw-px-2">
          <button 
            type="button"
            class="show-more-btn"
            id="show-more-{{ section.id }}"
            aria-expanded="false"
            aria-controls="hidden-products-{{ section.id }}"
          >
            {{ section.settings.show_more_text }}
          </button>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

<script src="{{ 'best-sellers.js' | asset_url }}" defer="defer"></script>

